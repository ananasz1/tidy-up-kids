<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vikischmideg.tidyup.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/toybox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:alpha="0.3"
                android:src="@drawable/tidyupbckgrnd" />

            <LinearLayout
                android:id="@+id/bigLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/textKid"
                        android:text="Kid 1" />

                    <TextView
                        android:id="@+id/kid_1_score"
                        style="@style/score"
                        android:text="0" />

                    <Button
                        style="@style/greenButton"
                        android:drawableLeft="@drawable/doll"
                        android:onClick="addFourForKid1"
                        android:text="+4 points" />

                    <Button
                        style="@style/greenButton"
                        android:drawableLeft="@drawable/plush"
                        android:onClick="addThreeForKid1"
                        android:text="+3 points" />

                    <Button
                        style="@style/greenButton"
                        android:drawableLeft="@drawable/car"
                        android:onClick="addTwoForKid1"
                        android:text="+2 points" />

                    <Button
                        style="@style/greenButton"
                        android:drawableLeft="@drawable/book"
                        android:onClick="addOneForKid1"
                        android:text="+1 point" />


                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp"
                    android:background="#FF9800" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/textKid"
                        android:text="Kid 2" />

                    <TextView
                        android:id="@+id/kid_2_score"
                        style="@style/score"
                        android:text="0" />

                    <Button
                        style="@style/purpleButton"
                        android:drawableLeft="@drawable/doll"
                        android:onClick="addFourForKid2"
                        android:text="+4 points" />

                    <Button
                        style="@style/purpleButton"
                        android:drawableLeft="@drawable/plush"
                        android:onClick="addThreeForKid2"
                        android:text="+3 points" />

                    <Button
                        style="@style/purpleButton"
                        android:drawableLeft="@drawable/car"
                        android:onClick="addTwoForKid2"
                        android:text="+2 points" />

                    <Button
                        style="@style/purpleButton"
                        android:drawableLeft="@drawable/book"
                        android:onClick="addOneForKid2"
                        android:text="+1 point" />


                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:background="#FF9800" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/legopic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:alpha="0.2"
                android:src="@drawable/lego" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="6dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:paddingBottom="8dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="8dp"
                        android:src="@drawable/doll" />

                    <TextView
                        android:id="@+id/dollQuantity"
                        style="@style/counter"
                        android:text="0 / 8" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingBottom="8dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="8dp"
                        android:src="@drawable/plush" />

                    <TextView
                        android:id="@+id/plushQuantity"
                        style="@style/counter"
                        android:text="0 / 16" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingBottom="8dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="8dp"
                        android:src="@drawable/car" />

                    <TextView
                        android:id="@+id/carQuantity"
                        style="@style/counter"
                        android:text="0 / 12" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingBottom="8dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="8dp"
                        android:src="@drawable/book" />

                    <TextView
                        android:id="@+id/bookQuantity"
                        style="@style/counter"
                        android:text="0 / 10" />

                </LinearLayout>

                <Button
                    style="@style/resetButton"
                    android:onClick="resetScore"
                    android:text="tidy up again!" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>



</LinearLayout>