<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true">

        <ImageView
            android:id="@+id/toybox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:alpha="0.3"
            android:src="@drawable/bearlandscape" />

        <LinearLayout
            android:id="@+id/bigLinear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:focusableInTouchMode="true"
                android:focusable="true">

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:focusable="true" />

                <EditText
                    android:id="@+id/name1"
                    style="@style/textKid"
                    android:inputType="textPersonName"
                    android:imeOptions="actionDone"
                    android:hint="Name Kid1" />


                <TextView
                    android:id="@+id/kid_1_score"
                    style="@style/score"
                    android:text="0" />

                <Button
                    android:id="@+id/fourKid1"
                    style="@style/myButton.Green"
                    android:drawableLeft="@drawable/doll"
                    android:onClick="addFourForKid1"
                    android:text="+4 points" />

                <Button
                    android:id="@+id/threeKid1"
                    style="@style/myButton.Green"
                    android:drawableLeft="@drawable/plush"
                    android:onClick="addThreeForKid1"
                    android:text="+3 points" />

                <Button
                    android:id="@+id/twoKid1"
                    style="@style/myButton.Green"
                    android:drawableLeft="@drawable/car"
                    android:onClick="addTwoForKid1"
                    android:text="+2 points" />

                <Button
                    android:id="@+id/oneKid1"
                    style="@style/myButton.Green"
                    android:drawableLeft="@drawable/book"
                    android:onClick="addOneForKid1"
                    android:text="+1 point" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="#ffff9800" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:paddingBottom="8dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="8dp"
                        android:src="@drawable/doll" />

                    <TextView
                        android:id="@+id/dollQuantity"
                        style="@style/counter"
                        android:text="0 / 8" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingBottom="8dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="8dp"
                        android:src="@drawable/plush" />

                    <TextView
                        android:id="@+id/plushQuantity"
                        style="@style/counter"
                        android:text="0 / 16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingBottom="8dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="8dp"
                        android:src="@drawable/car" />

                    <TextView
                        android:id="@+id/carQuantity"
                        style="@style/counter"
                        android:text="0 / 12" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingBottom="8dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="8dp"
                        android:src="@drawable/book" />

                    <TextView
                        android:id="@+id/bookQuantity"
                        style="@style/counter"
                        android:text="0 / 10" />
                </LinearLayout>

                <Button
                    style="@style/resetButton"
                    android:onClick="resetScore"
                    android:text="tidy up again!" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="#ffff9800" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:focusableInTouchMode="true"
                android:focusable="true">

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:focusable="true" />

                <EditText
                    android:id="@+id/name2"
                    style="@style/textKid"
                    android:inputType="textPersonName"
                    android:imeOptions="actionDone"
                    android:hint="Name Kid2"/>

                <TextView
                    android:id="@+id/kid_2_score"
                    style="@style/score"
                    android:text="0" />

                <Button
                    android:id="@+id/fourKid2"
                    style="@style/myButton.Purple"
                    android:drawableLeft="@drawable/doll"
                    android:onClick="addFourForKid2"
                    android:text="+4 points" />

                <Button
                    android:id="@+id/threeKid2"
                    style="@style/myButton.Purple"
                    android:drawableLeft="@drawable/plush"
                    android:onClick="addThreeForKid2"
                    android:text="+3 points" />

                <Button
                    android:id="@+id/twoKid2"
                    style="@style/myButton.Purple"
                    android:drawableLeft="@drawable/car"
                    android:onClick="addTwoForKid2"
                    android:text="+2 points" />

                <Button
                    android:id="@+id/oneKid2"
                    style="@style/myButton.Purple"
                    android:drawableLeft="@drawable/book"
                    android:onClick="addOneForKid2"
                    android:text="+1 point" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>